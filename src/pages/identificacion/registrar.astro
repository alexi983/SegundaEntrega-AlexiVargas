---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Header />

<section class="py-16 px-4 md:px-20 flex flex-col items-center text-gray-800">
  <h1 class="text-3xl md:text-5xl font-bold mb-10 text-center">Registrar Usuario</h1>
  <form class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md space-y-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">R.U.T.:</label>
      <input type="text" placeholder="EJ: 12345678-9" class="w-full border border-gray-300 rounded-md p-3 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Correo electronico:</label>
      <input type="email" placeholder="usuario@ejemplo.cl" class="w-full border border-gray-300 rounded-md p-3 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Clave:</label>
      <input type="password" placeholder="Cree una clave" class="w-full border border-gray-300 rounded-md p-3 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
    </div>
    <button type="submit" class="bg-orange-500 text-white font-semibold px-10 py-2 rounded hover:bg-orange-600 w-full">Registrar</button>
  </form>
  <button id="btn-volver" class="mt-8 bg-blue-800 text-white font-semibold px-8 py-2 rounded hover:bg-blue-700">
    Volver
  </button>
</section>

<Footer />

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const btnVolver = document.getElementById("btn-volver");
    if (btnVolver) btnVolver.addEventListener("click", () => window.history.back());
  });
</script>

