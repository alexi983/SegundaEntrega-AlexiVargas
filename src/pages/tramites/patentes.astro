---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Header />

<section class="py-16 px-4 md:px-20 text-gray-800">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl md:text-4xl font-bold text-blue-900 mb-6 text-center">
      Servicios On Line &gt; Pago de Patentes Municipales
    </h1>
    <h2 class="text-2xl font-semibold text-blue-900 mb-4">PASO 1</h2>
    <p class="text-gray-700 mb-6">
      Identificacion del Contribuyente: ingrese RUT del contribuyente o empresa y ROL de la patente a pagar.
    </p>
    <form id="formPatentes" class="space-y-6">
      <div>
        <label for="rut" class="block text-left text-gray-700 font-medium mb-1">RUT:</label>
        <input id="rut" type="text" placeholder="Ej: 12345678-K"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
      </div>
      <div>
        <label for="rol" class="block text-left text-gray-700 font-medium mb-1">ROL:</label>
        <input id="rol" type="text" placeholder="Ej: 1-12345678"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
      </div>
      <div class="flex justify-center mt-6">
        <button type="submit"
          class="bg-blue-800 text-white font-semibold px-8 py-3 rounded-lg hover:bg-blue-700 transition">
          Consultar
        </button>
      </div>
    </form>
    <p id="mensaje" class="text-center text-red-600 font-semibold mt-6 hidden"></p>
    <div class="text-center mt-10">
      <button id="btn-volver" class="bg-gray-600 text-white font-semibold px-8 py-2 rounded hover:bg-gray-500">
        Volver
      </button>
    </div>
  </div>
</section>

<Footer />

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("formPatentes");
    const mensaje = document.getElementById("mensaje");
    const volver = document.getElementById("btn-volver");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const rutInput = document.getElementById("rut");
        const rolInput = document.getElementById("rol");
        const rut = (rutInput instanceof HTMLInputElement) ? rutInput.value.trim() : "";
        const rol = (rolInput instanceof HTMLInputElement) ? rolInput.value.trim() : "";
        if (rut === "" || rol === "") {
          if (mensaje) {
            mensaje.textContent = "Debe ingresar su RUT y ROL para continuar.";
            mensaje.classList.remove("hidden");
            mensaje.classList.remove("text-green-600");
            mensaje.classList.add("text-red-600");
          }
        } else {
          if (mensaje) {
            mensaje.textContent = "Verificando informacion...";
            mensaje.classList.remove("hidden");
            mensaje.classList.remove("text-red-600");
            mensaje.classList.add("text-green-600");

            setTimeout(() => {
              mensaje.textContent = "";
              mensaje.classList.add("hidden");
            }, 2500);
          }
        }
      });
    }
    if (volver) {
      volver.addEventListener("click", function () {
        window.history.back();
      });
    }
  });
</script>
