---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Header />

<section class="py-16 px-4 md:px-20 text-gray-800">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl md:text-4xl font-bold text-blue-900 mb-6 text-center">
      Servicios On Line &gt; Consulta de Documentos Electronicos
    </h1>
    <p class="text-gray-700 mb-6">
      Seleccione el tipo de busqueda que desea realizar e ingrese el parametro correspondiente.
    </p>
    <div class="border border-gray-300 rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4">Busqueda por identificador unico</h2>
      <form id="formDocumentos" class="space-y-4">
        <div>
          <label for="identificador" class="block text-left text-gray-700 font-medium mb-1">Identificador:</label>
          <input id="identificador" type="text" placeholder="Ej: 123456789ABC"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-800 focus:outline-none" />
        </div>
        <div class="text-center">
          <button type="submit"
            class="bg-blue-800 text-white font-semibold px-8 py-3 rounded-lg hover:bg-blue-700 transition">
            Buscar
          </button>
        </div>
      </form>
      <p id="mensaje" class="text-center text-red-600 font-semibold mt-6 hidden"></p>
    </div>
    <div class="text-center mt-10">
      <button id="btn-volver" class="bg-gray-600 text-white font-semibold px-8 py-2 rounded hover:bg-gray-500">
        Volver
      </button>
    </div>
  </div>
</section>

<Footer />

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("formDocumentos");
    const mensaje = document.getElementById("mensaje");
    const volver = document.getElementById("btn-volver");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const input = document.getElementById("identificador");
        const valor = (input instanceof HTMLInputElement) ? input.value.trim() : "";

        if (valor === "") {
          if (mensaje) {
            mensaje.textContent = "Debe ingresar un identificador para continuar.";
            mensaje.classList.remove("hidden");
            mensaje.classList.remove("text-green-600");
            mensaje.classList.add("text-red-600");
          }
        } else {
          if (mensaje) {
            mensaje.textContent = "Buscando documento...";
            mensaje.classList.remove("hidden");
            mensaje.classList.remove("text-red-600");
            mensaje.classList.add("text-green-600");

            setTimeout(() => {
              mensaje.textContent = "";
              mensaje.classList.add("hidden");
            }, 2500);
          }
        }
      });
    }

    if (volver) {
      volver.addEventListener("click", function () {
        window.history.back();
      });
    }
  });
</script>
